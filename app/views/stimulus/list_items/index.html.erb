<p id="notice"><%= notice %></p>

<h1>List Items</h1>

<table id="list-items-table" class="table table-responsive table-stripped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Done at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @list_items.each do |list_item| %>
      <tr>
        <td><%= list_item.title %></td>
        <td><%= list_item.description %></td>
        <td><%= list_item.done_at %></td>
        <td><%= link_to 'Show', stimulus_list_item_path(list_item), class: "btn btn-outline-primary" %></td>
        <td><%= link_to 'Edit', edit_stimulus_list_item_path(list_item), class: "btn btn-outline-secondary" %></td>
        <td><%= link_to 'Destroy', stimulus_list_item_path(list_item), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New List Item', new_stimulus_list_item_path, class: "btn btn-outline-success" %>
